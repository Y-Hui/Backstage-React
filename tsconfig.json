{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@module/*": ["./src/components/*"],
      "@img/*": ["./src/assets/images/*"],
      "@api/*": ["./src/api/modules/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src"
  ]
}
